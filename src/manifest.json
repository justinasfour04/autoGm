{
  "manifest_version": 3,
  "name": "Arena Easy Message",
  "description": "A chrome extension for the arena to automatically message all your chats GM",
  "permissions": [
    "cookies"
  ],
  "host_permissions": [
    "*://arena.social/"
  ],
  "background": {
    "service_worker": "background.bundle.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon32.png"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}